{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [],
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "Preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
